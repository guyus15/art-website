<div class="container" >
    <div class="card">
        <div class="card-image">
            <figure class="image is-4by3">
                <%= image_tag(url_for(post.image)) %>
            </figure>
        </div>
        <div class="card-content">
            <p class="subtitle" style="overflow-y:scroll;"><%= post.description %></p>
            <p class="heading"><%= post.created_at.day %>/<%= post.created_at.month %>/<%= post.created_at.year %></p>
        </div>
    </div>
</div>