<!DOCTYPE html>
<html>
  <head>
    <title>Harriet C-W</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@700&display=swap" rel="stylesheet"> 
  </head>

  <body> 
    <nav class="navbar is-fixed-top" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <%= link_to root_path, class:"navbar-item" do %>
          <h1 class="title is-5">Harriet Chamberlain-Webber</h1>
        <% end %>

        <a role="button" class="navbar-burger burger " aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="nav-menu" class="navbar-menu">
        <div class="navbar-start">
          <%= link_to "HOME", root_path, class:"navbar-item" %>
          <%= link_to "GALLERY", "/gallery", class:"navbar-item" %>
          <%= link_to "ABOUT", "/about", class:"navbar-item" %>
          <%= link_to "CONTACT", "/contact", class:"navbar-item" %>
        </div>
      </div>
    </nav>
    
    <% if flash[:notice] %>
      <div class="notification is-dark global-notification">
        <p><%= notice %></p>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="notification is-danger global-notification">
        <p><%= alert %></p>
      </div>
    <% end %>

    <div id="page-container">
      <main id="content-wrap" class="mt-6">
        <%= yield %>
      </main>
      
      <footer id="footer" class="footer">
        <div class="content has-text-centered">
          <p>
            Website built by <strong>Guy Chamberlain-Webber</strong>.
          </p>
          <% unless admin_signed_in? %>
            <%= link_to "Admin", new_admin_session_path, class:"subtitle is-size-7" %>
          <% else %>
            <%= link_to "Log Out", destroy_admin_session_path, method: :delete, class:"subtitle is-size-7" %>
          <% end %>
        </div>
      </footer>
    </div>

  </body>
</html>
